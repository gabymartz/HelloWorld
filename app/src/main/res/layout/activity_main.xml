<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/myTitle"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="UPS APP"
        android:gravity="center"
        android:textSize = "24sp"
        android:background= "#001752"
        android:textColor="#FFDA0A"
        android:padding="20dp"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/welcome"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Welcome"
        android:gravity="center"
        android:textSize = "24sp"
        android:textColor="#000000"
        android:padding="20dp"
        android:textStyle="bold"
        android:layout_marginTop="90dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/myName"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="160dp"
        android:hint="Enter Name"
        android:background="#e0d8d7"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/myLastname"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="210dp"
        android:hint="Enter Lastname"
        android:background="#e0d8d7"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/myAge"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="260dp"
        android:hint="Enter Age in Years"
        android:inputType="number"
        android:background="#e0d8d7"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/myEdit"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="310dp"
        android:hint="Enter Bachelor's Degree"
        android:background="#e0d8d7"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/mySemester"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="360dp"
        android:hint="No. Of Semester"
        android:inputType="number"
        android:background="#e0d8d7"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/myButton"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFDA0A"
        android:textColor="#001752"
        android:textSize="20sp"
        android:text="Submit"
        android:textAllCaps="true"
        android:layout_marginTop="410dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- BotÃ³n Clear -->
    <Button
        android:id="@+id/clearButton"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="460dp"
        android:text="Clear"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FF4444"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student Data UPS"
        android:textSize = "24sp"
        android:background= "#001752"
        android:textColor="#FFDA0A"
        android:padding="20dp"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:layout_marginTop="550dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>
